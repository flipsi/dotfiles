" This is a configuration file for vimpc
" vimpc is a client for MPD

" Location: ~/.vimpcrc



"""" Server """"

" ...better set $MPD_HOST
"connect 192.168.2.115 6600
"connect localhost 6600
"connect asterix 6600




"""" Settings """"

set ignorecase
set noshowlists
set groupignorethe
set windows library,playlist
set window playlist

hi tab yellowbg
hi status yellowbg
hi progress redfg
hi song whitefg
hi id cyanfg
hi dir greenfg
hi current redfg
hi match greenfg
hi partial magentafg
hi full magentafg
hi error redfg


"""" Keybindings """"

" quit vimpc
map Q ZQ


" scroll
map <A-j> <C-d>
map <A-k> <C-u>


" Playback controls
map <Space> :pause<CR>
map o :next<CR>
map O :previous<CR>

" add current song
" set add end
map @ :set add next<C-m>:add<C-m>:set add end<CR>

" goto playlists current song
map F :playlist<C-m>f

" search
map รถ /
map ร :browse<C-m>gg/

" goto random line
map r %

" goto next or previous window
map <A-n> gt
map <A-p> gT

" goto window
map wl :library<CR>
map wp :playlist<CR>
map ws :lists<CR>
map wd :directory<CR>
map wb :browse<CR>
map wh :help<CR>


" delete all titles from the playlist except the current one
" (does not work if the current one is the first or last in the playlist)
alias crop playlist; normal fjVGdfkVggd;
map c :crop<CR>
" better solution: toggle 'Single' so that playing stops after current song

