[bar/main]

monitor = ${env:BAR_MAIN_MONITOR:eDP1}
dpi = ${env:BAR_MAIN_DPI:128}

width = 100%
height = ${env:BAR_MAIN_HEIGHT:30}

offset-x = 0%
offset-y = 0%

radius = 0.0

fixed-center = false

enable-ipc = true

; Make the bar appear below windows
;wm-restack = i3
;override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.primary}

border-size = 0
border-color = ${colors.gruvbox_light2}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "PragmataPro Mono:size=7"
font-1 = "fixed:pixelsize=10;1"
font-2 = "unifont:fontformat=truetype:size=8:antialias=false;0"
; font-3 = "siji:pixelsize=10;1"
font-3 = "Wuncon Siji:pixelsize=10;1"
font-4 = "PragmataPro Mono:size=12"

modules-left = i3
; modules-center = spotify
modules-right = pulseaudio xkeyboard wlan eth filesystem battery date powermenu

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}
tray-maxsize = ${env:BAR_TRAY_MAXSIZE:20}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[module/i3]

type = internal/i3
format = <label-state> <label-mode>

; Only show workspaces on the same output as the bar
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = false

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.gruvbox_dark0_hard}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.gruvbox_dark0_hard}
label-focused-underline = ${colors.gruvbox_neutral_red}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.gruvbox_light2}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-background = ${self.label-focused-background}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
; label-separator = |


