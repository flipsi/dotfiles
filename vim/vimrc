" Author: Philipp Moers <soziflip gmail com>
" A simple vimrc. With no dependencies


" SETTINGS

set nocompatible

" show line numbers
:set number

" statusline
set statusline="%f%m%r%h%w [%Y] [0x%02.2B]%< %F%=%4v,%4l %3p%% of %L"

" search preferences
:set incsearch
:set ignorecase
:set smartcase

" use 4 spaces instead of tabs
:set expandtab
:set tabstop=4
:set shiftwidth=4

" indent after open braces etc
set autoindent
set smartindent



" KEYBINDINGS

" ZQ to quit anyway 
" ZZ to save and quit
" Q to quit vim quickly
" vim will prompt if the file was changed but not saved.
nnoremap Q :quit<CR>

" scroll (alt key)
noremap <Esc>j <C-D> 
noremap <Esc>k <C-U> 

" search 
nnoremap ö /
nnoremap Ö ?

" goto mark 
nnoremap ä `

" movement to eol (l instead of $)
nnoremap cl c$
nnoremap yl y$
nnoremap dl d$
nnoremap vl v$

" add new line above or below
noremap <Esc>o <Esc>o<Esc>k
noremap <Esc>O <Esc>O<Esc>j

" undo and redo
noremap <Esc>u :undo<CR>
noremap <Esc>U :redo<CR>

