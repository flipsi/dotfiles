function! SetupSQLVimux()
    nnoremap <leader>bm  :call VimuxRunCommand("\\. " . expand('%:p'))<cr>
    nnoremap <leader>bp  :call VimuxRunCommand("\\i " . expand('%:p'))<cr>
endfunction
