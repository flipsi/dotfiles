function! SetupNpm()
    nnoremap <leader>bi  :call VimuxRunCommand("npm install")<cr>
    nnoremap <leader>bs  :call VimuxRunCommand("npm start")<cr>
    nnoremap <leader>btt :call VimuxRunCommand("npm test")<cr>
    nnoremap <leader>btu :call VimuxRunCommand("npm test-unit")<cr>
    nnoremap <leader>bti :call VimuxRunCommand("npm test-int")<cr>
endfunction
command! -bang SetupNpm :call SetupNpm()

function! SetupYarn()
    nnoremap <leader>bi  :call VimuxRunCommand("yarn install")<cr>
    nnoremap <leader>bd  :call VimuxRunCommand("yarn build")<cr>
    nnoremap <leader>bs  :call VimuxRunCommand("yarn start")<cr>
    nnoremap <leader>btt :call VimuxRunCommand("yarn test")<cr>
    nnoremap <leader>btu :call VimuxRunCommand("yarn test-unit")<cr>
    nnoremap <leader>bti :call VimuxRunCommand("yarn test-int")<cr>
endfunction
command! -bang SetupYarn :call SetupYarn()

function! SetupTsuquyomi()
    nmap <leader>rf <Plug>(TsuquyomiRenameSymbolC)
    nmap <leader>rF <Plug>(TsuquyomiRenameSymbol)
    nmap <leader>iq : <C-u>echo tsuquyomi#hint()<CR>
endfunction
command! -bang SetupTsuquyomi :call SetupTsuquyomi()



