## set keyboard brightness
bindsym XF86KbdBrightnessDown exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness down"
bindsym XF86KbdBrightnessUp   exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness up"

## set xfce4-terminal font size (not possible by default)
bindsym $mod+Control+plus   exec --no-startup-id "$SHELLSCRIPT_PATH/xfce4-terminal-fontsize increase"
bindsym $mod+Control+minus  exec --no-startup-id "$SHELLSCRIPT_PATH/xfce4-terminal-fontsize decrease"

## set volume
# bindsym XF86AudioLowerVolume exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
# bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
bindsym XF86AudioLowerVolume exec --no-startup-id "playerctl -p spotify volume 0.05-"; exec "$UPDATE_STATUSBAR"
bindsym XF86AudioRaiseVolume exec --no-startup-id "playerctl -p spotify volume 0.05+"; exec "$UPDATE_STATUSBAR"

## audio control
bindsym $mod+Shift+0 mode "$audio"
set $audio Audio (+/-) Volume (m/M) Mute/Unmute (e) Mute/Unmute Video Call (s) Switch output (p) Play sound (g) GUI
mode "$audio" {
    bindsym plus            exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
    bindsym minus           exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
    bindsym Up              exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
    bindsym Down            exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
    bindsym a               exec --no-startup-id "amixer sset Master 5%+"; exec "$UPDATE_STATUSBAR"
    bindsym z               exec --no-startup-id "amixer sset Master 5%-"; exec "$UPDATE_STATUSBAR"
    bindsym Right           exec --no-startup-id "amixer sset Master 5%+"; exec "$UPDATE_STATUSBAR"
    bindsym Left            exec --no-startup-id "amixer sset Master 5%-"; exec "$UPDATE_STATUSBAR"
    bindsym m               exec --no-startup-id "amixer set Master mute"; exec "$UPDATE_STATUSBAR"
    bindsym Shift+m         exec --no-startup-id "amixer set Master unmute"; exec "$UPDATE_STATUSBAR"
    bindsym s               exec --no-startup-id "$SHELLSCRIPT_PATH/switch-audio-output"
    bindsym p               exec --no-startup-id "~/.i3/bin/soundboard.sh"; mode "default"
    bindsym e               exec --no-startup-id "~/.i3/bin/mute-video-call.sh"; mode "default"
    bindsym g               exec --no-startup-id "pavucontrol"; mode "default"
    bindsym $mod+0          exec --no-startup-id "pavucontrol"; mode "default"
    # cancel
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Control+e       exec --no-startup-id "~/.i3/bin/mute-video-call.sh"

