## resize container
bindsym $mod+r mode "resize"
mode "resize" {
    set $big_steps   30
    set $small_steps  5
    bindsym h           resize shrink width  $big_steps px or $big_steps ppt
    bindsym Left        resize shrink width  $big_steps px or $big_steps ppt
    bindsym j           resize shrink height $big_steps px or $big_steps ppt
    bindsym Down        resize shrink height $big_steps px or $big_steps ppt
    bindsym k           resize grow   height $big_steps px or $big_steps ppt
    bindsym Up          resize grow   height $big_steps px or $big_steps ppt
    bindsym l           resize grow   width  $big_steps px or $big_steps ppt
    bindsym Right       resize grow   width  $big_steps px or $big_steps ppt
    bindsym Shift+h     resize shrink width  $small_steps px or $small_steps ppt
    bindsym Shift+Left  resize shrink width  $small_steps px or $small_steps ppt
    bindsym Shift+j     resize shrink height $small_steps px or $small_steps ppt
    bindsym Shift+Down  resize shrink height $small_steps px or $small_steps ppt
    bindsym Shift+k     resize grow   height $small_steps px or $small_steps ppt
    bindsym Shift+Up    resize grow   height $small_steps px or $small_steps ppt
    bindsym Shift+l     resize grow   width  $small_steps px or $small_steps ppt
    bindsym Shift+Right resize grow   width  $small_steps px or $small_steps ppt
    # cancel
    bindsym $mod+r mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

