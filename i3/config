## start an application
bindsym $mod+Shift+o mode "$launch"
set $launch Launch: (o) Terminal (f) Firefox (c) Chromium (g) Chrome (q) Qutebrowser (m) Music (j) IntelliJ (s) Slack (t) Telegram
mode "$launch" {
    bindsym o               mode "$terminal"
    bindsym Shift+o         mode "$terminal"
    bindsym $mod+o          mode "$terminal"
    bindsym $mod+Shift+o    mode "$terminal"
    bindsym c       exec --no-startup-id "chromium"; mode "default"
    bindsym f       exec --no-startup-id "firefox"; mode "default"
    bindsym g       exec --no-startup-id "google-chrome-stable"; mode "default"
    bindsym i       exec --no-startup-id "vivaldi-stable"; mode "default"
    bindsym j       exec --no-startup-id "/home/sflip/opt/idea-IU-183.5153.38/bin/idea.sh || idea"; mode "default"
    bindsym m       exec --no-startup-id "spotify"; mode "default"
    bindsym q       exec --no-startup-id "qutebrowser"; mode "default"
    bindsym s       exec --no-startup-id "slack"; mode "default"
    bindsym t       exec --no-startup-id "telegram-desktop"; mode "default"
    # cancel
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## start a terminal
set $terminal Open a terminal: (a) alacritty (m) termite (u) urxvt (k) konsole (i) kitty (x) xfce-terminal (g) gnome-terminal (r) cool-retro-term (t) terminology
mode "$terminal" {
    bindsym a       exec --no-startup-id "alacritty --command tmux -2 new-session -A -s main"; mode "default"
    bindsym Shift+a exec --no-startup-id "alacritty"; mode "default"
    bindsym m       exec --no-startup-id "termite -e 'tmux -2 new-session -A -s main'"; mode "default"
    bindsym Shift+m exec --no-startup-id "termite"; mode "default"
    bindsym u       exec --no-startup-id "urxvt -e tmux -2 new-session -A -s main"; mode "default"
    bindsym Shift+u exec --no-startup-id "urxvt"; mode "default"
    bindsym k       exec --no-startup-id "konsole --hide-menubar --hide-tabbar --profile NicNacPower -e 'tmux -2 new-session -A -s main'"; mode "default"
    bindsym Shift+k exec --no-startup-id "konsole --fallback-profile"; mode "default"
    bindsym i       exec --no-startup-id "kitty tmux -2 new-session -A -s main"; mode "default"
    bindsym Shift+i exec --no-startup-id "kitty"; mode "default"
    bindsym x       exec --no-startup-id "xfce4-terminal --command='tmux -2 new-session -A -s main'"; mode "default"
    bindsym Shift+x exec --no-startup-id "xfce4-terminal"; mode "default"
    bindsym g       exec --no-startup-id "gnome-terminal --hide-menubar -- tmux -2 new-session -A -s main"; mode "default"
    bindsym Shift+g exec --no-startup-id "gnome-terminal --hide-menubar"; mode "default"
    bindsym r       exec --no-startup-id "cool-retro-term -e tmux -2 new-session -A -s main"; mode "default"
    bindsym Shift+r exec --no-startup-id "cool-retro-term"; mode "default"
    bindsym t       exec --no-startup-id "terminology --exec 'tmux -2 new-session -A -s main'"; mode "default"
    bindsym Shift+t exec --no-startup-id "terminology"; mode "default"
    # cancel
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## switch to a specific window or workspace
bindsym $mod+o mode "$goto"
set $goto Goto: (o) Terminal (i) Vivaldi (f) Firefox (c) Chromium (g) Chrome (q) Qutebrowser (m) Music (j) IntelliJ (s) Slack (t) Telegram (b) Trello
mode "$goto" {
  bindsym o         [class="(?i)alacritty"]             focus; mode "default"
  bindsym $mod+o    [class="(?i)alacritty"]             focus; mode "default"
  bindsym f         [class="(?i)firefox"]               focus; mode "default"
  bindsym $mod+f    [class="(?i)firefox"]               focus; mode "default"
  bindsym i         [class="(?i)vivaldi-stable"]        focus; mode "default"
  bindsym $mod+i    [class="(?i)vivaldi-stable"]        focus; mode "default"
  bindsym q         [class="(?i)qutebrowser"]           focus; mode "default"
  bindsym $mod+q    [class="(?i)qutebrowser"]           focus; mode "default"
  bindsym m         [class="(?i)spotify"]               focus; mode "default"
  bindsym $mod+m    [class="(?i)spotify"]               focus; mode "default"
  bindsym j         [class="(?i)jetbrains-idea"]        focus; mode "default"
  bindsym $mod+j    [class="(?i)jetbrains-idea"]        focus; mode "default"
  bindsym s         [class="(?i)slack"]                 focus; mode "default"
  bindsym $mod+s    [class="(?i)slack"]                 focus; mode "default"
  bindsym t         [class="(?i)Telegram"]              focus; mode "default"
  bindsym $mod+t    [class="(?i)Telegram"]              focus; mode "default"
  bindsym c         [class="(?i)chromium" instance="chromium"] focus; mode "default"
  bindsym $mod+c    [class="(?i)chromium" instance="chromium"] focus; mode "default"
  bindsym g         [class="(?i)google-chrome" instance="google-chrome"] focus; mode "default"
  bindsym $mod+g    [class="(?i)google-chrome" instance="google-chrome"] focus; mode "default"
  bindsym b         [class="(?i)chrom" instance="(crx_flcchhclanjfdanlfphjfnhbjdbejong|crx_goifhkhiimheobgjhfbnkkibebioelpk)"] focus; mode "default"
  bindsym $mod+b    [class="(?i)chrom" instance="(crx_flcchhclanjfdanlfphjfnhbjdbejong|crx_goifhkhiimheobgjhfbnkkibebioelpk)"] focus; mode "default"
  # cancel
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

## kill specific apps (e.g. when memory really full again and the system hangs)
bindsym $mod+Shift+BackSpace mode "$kill"
set $kill Kill: (f) firefox (g) chrome (j) java
mode "$kill" {
    bindsym g       exec --no-startup-id "pkill    chrome"; mode "default"
    bindsym G       exec --no-startup-id "pkill -9 chrome"; mode "default"
    bindsym f       exec --no-startup-id "pkill    firefox"; mode "default"
    bindsym F       exec --no-startup-id "pkill -9 firefox"; mode "default"
    bindsym j       exec --no-startup-id "pkill    java"; mode "default"
    bindsym J       exec --no-startup-id "pkill -9 java"; mode "default"
    # cancel
    #bindsym $mod+o mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

