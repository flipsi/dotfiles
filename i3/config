## launcher options
set $DMENU_OPTIONS   -l 15 -fn 'PragmataPro Mono-10' -i -nb '#282828' -sb '#FABD2F' -sf '#282828'
set $DMENU_OPTIONS_2 -l 15 -fn 'PragmataPro Mono-10' -i -nb \#282828 -sb \#FABD2F -sf \#282828

## modifier key: windows/super
set $mod Mod4

## Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

## focus when mouse moves
focus_follows_mouse no

## don't move mouse cursor when changing output
mouse_warping none

## close container with middle click on title bar
## (mod2 numlock, so this should work in both cases https://github.com/i3/i3/issues/2523)
bindsym --release      button2 kill
bindsym --release Mod2+button2 kill

## enable/disable touchpad
bindsym XF86TouchpadToggle  exec --no-startup-id "$SHELLSCRIPT_PATH/xinput-toggle-enabled"

## reload the configuration file or restart i3 [preserves session] etc.
bindsym $mod+F5 mode "$refresh"
set $refresh (l) reload config, (s) restart i3, (i) initialize, (x/o) setup outputs, (d/D) setup DPI, (Z/z) save/restore layout
mode "$refresh" {
    bindsym l reload; mode "default"
    bindsym s restart
    bindsym i           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize.sh > /tmp/i3-initialize.log 2>&1"; mode "default"
    bindsym x           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize-outputs.sh > /tmp/i3-initialize-outputs.log 2>&1"; mode "default"
    bindsym o           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize-outputs.sh --only > /tmp/i3-initialize-outputs.log 2>&1"; mode "default"
    bindsym d           exec --no-startup-id "/home/sflip/dotfiles/setup-dpi.sh --regular > /tmp/setup-dpi.log 2>&1"; mode "default"
    bindsym Shift+d     exec --no-startup-id "/home/sflip/dotfiles/setup-dpi.sh --high > /tmp/setup-dpi.log 2>&1"; mode "default"
    bindsym Shift+z     exec --no-startup-id "/home/sflip/.i3/bin/i3-workspaces-save-and-restore.py save"; mode "default"
    bindsym z           exec --no-startup-id "/home/sflip/.i3/bin/i3-workspaces-save-and-restore.py restore"; mode "default"
    bindsym a           exec --no-startup-id "/home/sflip/.i3/bin/i3-config-mod-assign-chrome-app.sh > /tmp/i3-config-mod-assign-chrome-app.log 2>&1"; mode "default"
    # cancel
    bindsym $mod+F5 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## change keyboard layout
bindsym $mod+F1 mode "$change_keyboard_layout"
set $change_keyboard_layout Keyboard layout: (a) automatically (F1) de (F2) norman_sflip (F3) us (F4) us_sflip (F5) neo (F6) dvorak (F7) programmer dvorak
mode "$change_keyboard_layout" {
    bindsym a  exec --no-startup-id "$SHELLSCRIPT_PATH/set-keyboard-layout.sh"; mode "default"
    bindsym F1 exec "setxkbmap de -variant nodeadkeys"; mode "default"
    bindsym  1 exec "setxkbmap de -variant nodeadkeys"; mode "default"
    bindsym F2 exec "setxkbmap us_norman_sflip"; mode "default"
    bindsym  2 exec "setxkbmap us_norman_sflip"; mode "default"
    bindsym F3 exec "setxkbmap us"; mode "default"
    bindsym  3 exec "setxkbmap us"; mode "default"
    bindsym F4 exec "setxkbmap us_sflip"; mode "default"
    bindsym  4 exec "setxkbmap us_sflip"; mode "default"
    bindsym F5 exec "setxkbmap neo"; mode "default"
    bindsym  5 exec "setxkbmap neo"; mode "default"
    bindsym F6 exec "setxkbmap dvorak"; mode "default"
    bindsym  6 exec "setxkbmap dvorak"; mode "default"
    bindsym F7 exec "setxkbmap -layout us -variant dvp"; mode "default"
    bindsym  7 exec "setxkbmap -layout us -variant dvp"; mode "default"
    # cancel
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## show keyboard layout
set $keyboard_layout_image_source https://romanzolotarev.com/typing-norman.png
set $keyboard_layout_image /home/sflip/.i3/keyboard_layout.png
exec "test -f $keyboard_layout_image || $( sleep 20 && curl $keyboard_layout_image_source > $keyboard_layout_image )"
bindsym $mod+Shift+F1 exec --no-startup-id "pkill -fx 'sxiv -z 100 $keyboard_layout_image' || sxiv -z 100 $keyboard_layout_image"



