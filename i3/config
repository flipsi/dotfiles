# change look and feel at runtime
bindsym $mod+g mode "$gui_settings"
set $gui_settings i3 GUI settings: (g) toggle gaps  (b) toggle bar (r) toggle borders (w) change wallpaper
mode "$gui_settings" {
    bindsym       g     gaps outer all toggle $I3_GAPS_OUTER; gaps inner all toggle $I3_GAPS_INNER; mode "default"
    bindsym       w     mode "$change_wallpaper"
    bindsym       r     border toggle; mode "default"
    bindsym       b     exec "$POLYBAR_TOGGLE"; mode "default"
    # cancel
    bindsym $mod+g mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}



