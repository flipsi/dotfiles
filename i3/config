exec "/home/sflip/.i3/bin/i3-initialize-outputs.sh > /tmp/i3-initialize-outputs.log 2>&1"

## set keyboard layout
exec "$SHELLSCRIPT_PATH/set-keyboard-layout.sh"

## turn on num block
exec --no-startup-id "numlockx"

## turn off pc speaker with annoying beep
exec "xset -b"

## disable touchpad
