###############################################################################
###########  HELPER  ##########################################################
###############################################################################

## do something with the clipboard
bindsym $mod+c mode "$mode_clipboard"
set $mode_clipboard Clipboard: (c) choose (p) get password
mode "$mode_clipboard" {
    bindsym  $mod+c exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"; mode "default";
    bindsym       c exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"; mode "default";
    bindsym Shift+c exec --no-startup-id "CM_LAUNCHER=dmenu clipmenu $DMENU_OPTIONS"; mode "default";
    bindsym       p exec --no-startup-id "rofi-pass"; mode "default";
    bindsym Shift+p exec --no-startup-id "passmenu $DMENU_OPTIONS"; mode "default";
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## type something or press keys or click
bindsym $mod+x mode "$mode_x"
set $mode_x (x) type with xdotool (t) type timestamp with xdotool (g) Google on Duckduckgo (p) generate password in clipboard (n) click away notification
mode "$mode_x" {
    bindsym  $mod+x mode "$mode_xdootool"
    bindsym       x mode "$mode_xdootool"
    bindsym  $mod+t mode "$mode_xdootool_timestamp"
    bindsym       t mode "$mode_xdootool_timestamp"
    bindsym  $mod+p exec --no-startup-id "pwgen 22 1 | tr -d '\n' | xclip -selection clipboard"; mode "default"
    bindsym       p exec --no-startup-id "pwgen 22 1 | tr -d '\n' | xclip -selection clipboard"; mode "default"
    bindsym  $mod+g exec --no-startup-id "xdotool key --delay 100 g i Home; xdotool type '!g '; xdotool key KP_Enter "; mode "default"
    bindsym       g exec --no-startup-id "xdotool key --delay 100 g i Home; xdotool type '!g '; xdotool key KP_Enter "; mode "default"
    bindsym  $mod+n exec --no-startup-id "xdotool mousemove 1880 35 click 1 mousemove restore"; mode "default"
    bindsym       n exec --no-startup-id "xdotool mousemove 1880 35 click 1 mousemove restore"; mode "default"
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return      mode "default"
    bindsym Escape      mode "default"
}
set $mode_xdootool (c) ^ (b) bash with my bashrc (g) Google contact email (p) testing password (s) shrug (t) timestamp
mode "$mode_xdootool" {
    bindsym b       exec --no-startup-id "xdotool type 'bbash --rcfile <(curl https://raw.githubusercontent.com/sflip/dotfiles/master/bash/bashrc_sflip)'; xdotool key Return"; mode "default";
    bindsym c       exec --no-startup-id "xdotool type '^'"; mode "default";
    bindsym g       exec --no-startup-id "xdotool type $(goobook-query-mail.sh)"; mode "default";
    bindsym p       exec --no-startup-id "xdotool type 'iopineiBie5fiong7yae6aeng0ooF6'"; mode "default";
    bindsym s       exec --no-startup-id "sleep 0.2; xdotool type --delay 30 '¯\_(ツ)_/¯'"; mode "default";
    bindsym t       mode "$mode_xdootool_timestamp"
    bindsym Shift+s exec --no-startup-id "sleep 0.2; xdotool type --delay 30 '¯\\\_(ツ)\_/¯'"; mode "default";
    # cancel
    bindsym BackSpace   mode "$mode_x"
    bindsym $mod+Escape mode "default"
    bindsym Return      mode "default"
    bindsym Escape      mode "default"
}
set $mode_xdootool_timestamp Format: (d) YYYY-MM-DD  (D) YYYYMMDD (g) DD.MM.YYYY (t) HH:MM (T) HHMM (a) YYYY-MM-DD-HH-MM (A) YYYYMMDDHHMM (u) unix timestamp
mode "$mode_xdootool_timestamp" {
    bindsym d       exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%Y-%m-%d)\\""; mode "default";
    bindsym Shift+d exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%Y%m%d)\\""; mode "default";
    bindsym g       exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%d.%m.%Y)\\""; mode "default";
    bindsym t       exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%H:%M)\\""; mode "default";
    bindsym Shift+t exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%H%M)\\""; mode "default";
    bindsym a       exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%Y-%m-%d-%H-%M)\\""; mode "default";
    bindsym Shift+a exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%Y%m%d%H%M)\\""; mode "default";
    bindsym u       exec --no-startup-id "sleep 0.2; xdotool type \\"$(date +%s)\\""; mode "default";
    # cancel
    bindsym BackSpace   mode "$mode_x"
    bindsym $mod+Escape mode "default"
    bindsym Return      mode "default"
    bindsym Escape      mode "default"
}


###############################################################################
###########  SYSTEM  ##########################################################
###############################################################################

# command to lock screen.
# for i3lock, image has to be png
set $LOCK_CMD i3lock -e -t -i ~/.i3/wallpaper.png

## lock/exit/suspend etc.
bindsym XF86PowerOff mode "$mode_system"
bindsym $mod+Escape mode "$mode_system"
set $mode_system Want to leave?  (e) logout, (u) switch user, (l) lock, (s) suspend, (h) hibernate, (r) reboot, (p) poweroff (o) poweroff smoothly
mode "$mode_system" {
    bindsym e exit
    bindsym u exec --no-startup-id "i3exit switch_user"; mode "default"
    bindsym l exec --no-startup-id "$LOCK_CMD"; mode "default"
    bindsym s exec --no-startup-id "$LOCK_CMD; systemctl suspend -i"; mode "default"
    bindsym h exec --no-startup-id "systemctl hibernate"; mode "default"
    bindsym r exec --no-startup-id "systemctl reboot"
    bindsym p exec --no-startup-id "systemctl poweroff"
    bindsym o exec --no-startup-id "/home/sflip/.i3/bin/i3-terminate.sh"; exec --no-startup-id "i3-nagbar -t warning -m 'About to Poweroff... ' -b Abort 'pkill -f i3-terminate.sh'"; mode "default"
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## screen and light settings
## TODO screen brightness for separate outputs
bindsym $mod+F10 mode "$mode_light"
set $mode_light Screen and light settings: (+/-) screen brightness (n) toggle night adjustment (k/b) keyboard brighness
mode "$mode_light" {
    bindsym plus            exec --no-startup-id "xbacklight -inc 2"
    bindsym minus           exec --no-startup-id "xbacklight -dec 2"
    bindsym Up              exec --no-startup-id "xbacklight -inc 2"
    bindsym Down            exec --no-startup-id "xbacklight -dec 2"
    bindsym a               exec --no-startup-id "xbacklight -inc 5"
    bindsym z               exec --no-startup-id "xbacklight -dec 5"
    bindsym Right           exec --no-startup-id "xbacklight -inc 5"
    bindsym Left            exec --no-startup-id "xbacklight -dec 5"
    bindsym n               exec --no-startup-id "pkill -USR1 '^redshift$'"; mode "default"
    bindsym k               exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness up"
    bindsym b               exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness down"
    # cancel
    bindsym $mod+F10 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

