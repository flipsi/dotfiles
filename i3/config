###############################################################################
###########  HELPER  ##########################################################
###############################################################################

## do something with the clipboard
bindsym $mod+c mode "$mode_clipboard"
set $mode_clipboard Clipboard: (c) choose (p) get password
mode "$mode_clipboard" {
    bindsym  $mod+c exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"; mode "default";
    bindsym       c exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"; mode "default";
    bindsym Shift+c exec --no-startup-id "CM_LAUNCHER=dmenu clipmenu $DMENU_OPTIONS"; mode "default";
    bindsym       p exec --no-startup-id "rofi-pass"; mode "default";
    bindsym Shift+p exec --no-startup-id "passmenu $DMENU_OPTIONS"; mode "default";
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## type something or press keys or click
bindsym $mod+x mode "$mode_x"
set $mode_x (x) type with xdotool (n) click away notification
mode "$mode_x" {
    bindsym  $mod+x mode "$mode_xdootool"
    bindsym       x mode "$mode_xdootool"
    bindsym  $mod+n exec --no-startup-id "xdotool mousemove 1880 35 click 1 mousemove restore"; mode "default"
    bindsym       n exec --no-startup-id "xdotool mousemove 1880 35 click 1 mousemove restore"; mode "default"
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
set $mode_xdootool (b) bash with my bashrc (s) shrug
mode "$mode_xdootool" {
    bindsym b exec --no-startup-id "xdotool type 'bbash --rcfile <(curl https://raw.githubusercontent.com/sflip/dotfiles/master/bash/bashrc_sflip)'; xdotool key Return"; mode "default";
    bindsym s exec --no-startup-id "xdotool type --delay 50 '     ¯\_(ツ)_/¯'"; mode "default";
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}



###############################################################################
###########  SYSTEM  ##########################################################
###############################################################################

# command to lock screen.
# for i3lock, image has to be png
set $LOCK_CMD i3lock -e -t -i ~/.i3/wallpaper.png

## lock/exit/suspend etc.
bindsym XF86PowerOff mode "$mode_system"
bindsym $mod+Escape mode "$mode_system"
set $mode_system Want to leave?  (e) logout, (u) switch user, (l) lock, (s) suspend, (h) hibernate, (r) reboot, (p) poweroff (o) poweroff smoothly
mode "$mode_system" {
    bindsym e exit
    bindsym u exec --no-startup-id "i3exit switch_user"; mode "default"
    bindsym l exec --no-startup-id "$LOCK_CMD"; mode "default"
    bindsym s exec --no-startup-id "systemctl suspend"; mode "default"
    bindsym h exec --no-startup-id "systemctl hibernate"; mode "default"
    bindsym r exec --no-startup-id "systemctl reboot"
    bindsym p exec --no-startup-id "systemctl poweroff"
    bindsym o exec --no-startup-id "/home/sflip/.i3/bin/i3-terminate.sh"; exec --no-startup-id "i3-nagbar -t warning -m 'About to Poweroff... ' -b Abort 'pkill -f i3-terminate.sh'"; mode "default"
    # cancel
    bindsym $mod+Escape mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# also lock with Ctrl+Alt+Space
bindsym Control+Mod1+space exec --no-startup-id "$LOCK_CMD"

## screen and light settings
## TODO screen brightness for separate outputs
bindsym $mod+F10 mode "$mode_light"
set $mode_light Screen and light settings: (+/-) screen brightness (n) toggle night adjustment (k/b) keyboard brighness
mode "$mode_light" {
    bindsym plus            exec --no-startup-id "xbacklight -inc 2"
    bindsym minus           exec --no-startup-id "xbacklight -dec 2"
    bindsym Up              exec --no-startup-id "xbacklight -inc 2"
    bindsym Down            exec --no-startup-id "xbacklight -dec 2"
    bindsym a               exec --no-startup-id "xbacklight -inc 5"
    bindsym z               exec --no-startup-id "xbacklight -inc 5"
    bindsym Right           exec --no-startup-id "xbacklight -inc 5"
    bindsym Left            exec --no-startup-id "xbacklight -inc 5"
    bindsym n               exec --no-startup-id "pkill -USR1 '^redshift$'"; mode "default"
    bindsym k               exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness up"
    bindsym b               exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness down"
    # cancel
    bindsym $mod+F10 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## set keyboard brightness
bindsym XF86KbdBrightnessDown exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness down"
bindsym XF86KbdBrightnessUp   exec --no-startup-id "$SHELLSCRIPT_PATH/keyboard-brightness up"

# set display brightness
# bindsym $mod+Left   exec --no-startup-id "xbacklight -dec 3"
# bindsym $mod+Right  exec --no-startup-id "xbacklight -inc 3"

## set xfce4-terminal font size (not possible by default)
bindsym $mod+Control+plus   exec --no-startup-id "$SHELLSCRIPT_PATH/xfce4-terminal-fontsize increase"
bindsym $mod+Control+minus  exec --no-startup-id "$SHELLSCRIPT_PATH/xfce4-terminal-fontsize decrease"

## set volume
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"

## audio control
bindsym $mod+0 mode "$audio"
set $audio Audio (+/-) Volume (m/M) Mute/Unmute (s) Switch output (p) Play sound (g) GUI
mode "$audio" {
    bindsym plus            exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
    bindsym minus           exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
    bindsym Up              exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
    bindsym Down            exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
    bindsym a               exec --no-startup-id "amixer sset Master 5%+"; exec "$UPDATE_STATUSBAR"
    bindsym z               exec --no-startup-id "amixer sset Master 5%-"; exec "$UPDATE_STATUSBAR"
    bindsym Right           exec --no-startup-id "amixer sset Master 5%+"; exec "$UPDATE_STATUSBAR"
    bindsym Left            exec --no-startup-id "amixer sset Master 5%-"; exec "$UPDATE_STATUSBAR"
    bindsym m               exec --no-startup-id "amixer set Master mute"; exec "$UPDATE_STATUSBAR"
    bindsym Shift+m         exec --no-startup-id "amixer set Master unmute"; exec "$UPDATE_STATUSBAR"
    bindsym s               exec --no-startup-id "$SHELLSCRIPT_PATH/switch-audio-output"
    bindsym p               exec --no-startup-id "~/.i3/bin/soundboard.sh"; mode "default"
    bindsym g               exec --no-startup-id "pavucontrol"; mode "default"
    # cancel
    bindsym $mod+0 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## music control
bindsym XF86AudioPlay        exec --no-startup-id "playerctl play-pause"; exec "$UPDATE_STATUSBAR"
bindsym XF86AudioNext        exec --no-startup-id "playerctl next"; exec "$UPDATE_STATUSBAR"
bindsym XF86AudioPrev        exec --no-startup-id "playerctl previous"; exec "$UPDATE_STATUSBAR"

# bindsym $mod+Shift+0 mode "$player_control"
# bindsym $mod+Shift+0 mode "$mpd_control"
# bindsym $mod+Shift+0 mode "$spotify_control"
bindsym $mod+Shift+0 exec "pgrep mpd && i3-msg mode $mpd_control || i3-msg mode $music_control"

## control music (including spotify)
set $music_control Music Control
mode "$music_control" {
    bindsym space            exec --no-startup-id "playerctl play-pause"
    bindsym BackSpace        exec --no-startup-id "playerctl stop"
    bindsym n                exec --no-startup-id "playerctl next"; exec "$UPDATE_STATUSBAR"
    bindsym o                exec --no-startup-id "playerctl next"; exec "$UPDATE_STATUSBAR"
    bindsym Right            exec --no-startup-id "playerctl next"; exec "$UPDATE_STATUSBAR"
    bindsym p                exec --no-startup-id "playerctl previous"; exec "$UPDATE_STATUSBAR"
    bindsym O                exec --no-startup-id "playerctl previous"; exec "$UPDATE_STATUSBAR"
    bindsym Left             exec --no-startup-id "playerctl previous"; exec "$UPDATE_STATUSBAR"
    # bindsym plus             exec --no-startup-id "playerctl volume 0.9+"
    # bindsym minus            exec --no-startup-id "playerctl volume 0.9-"
    bindsym plus            exec --no-startup-id "amixer sset Master 1%+"; exec "$UPDATE_STATUSBAR"
    bindsym minus           exec --no-startup-id "amixer sset Master 1%-"; exec "$UPDATE_STATUSBAR"
    # cancel
    bindsym $mod+Shift+0 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## control music via mpd (music player daemon)
# set $mpd_control MPD: (space) play/pause, (n) next, (p) prev, (s) stop, (c) last, (+/-) volume
set $mpd_control MPD Control
mode "$mpd_control" {
    bindsym space            exec --no-startup-id "mpc toggle"; exec "$UPDATE_STATUSBAR"
    bindsym n                exec --no-startup-id "mpc next"; exec "$UPDATE_STATUSBAR"
    bindsym o                exec --no-startup-id "mpc next"; exec "$UPDATE_STATUSBAR"
    bindsym p                exec --no-startup-id "mpc prev"; exec "$UPDATE_STATUSBAR"
    bindsym O                exec --no-startup-id "mpc prev"; exec "$UPDATE_STATUSBAR"
    bindsym s                exec --no-startup-id "mpc stop"; mode "default"; exec "$UPDATE_STATUSBAR"
    bindsym BackSpace        exec --no-startup-id "mpc stop"; mode "default"; exec "$UPDATE_STATUSBAR"
    bindsym c                exec --no-startup-id "mpc crop"; mode "default"; exec "$UPDATE_STATUSBAR"
    bindsym minus            exec --no-startup-id "mpc volume -1"; exec "$UPDATE_STATUSBAR"
    bindsym plus             exec --no-startup-id "mpc volume +1"; exec "$UPDATE_STATUSBAR"
    bindsym r                exec --no-startup-id "mpc random"
    bindsym R                exec --no-startup-id "mpc random"
    bindsym Shift+S          exec --no-startup-id "mpc single"; mode "default"
    # cancel
    bindsym $mod+Shift+0 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## control music via spotify
set $spotify_control Spotify Control
mode "$spotify_control" {
    bindsym space            exec --no-startup-id "spotifycli --playpause"
    bindsym BackSpace        exec --no-startup-id "spotifycli --playpause"
    bindsym n                exec --no-startup-id "spotifycli --next"; exec "$UPDATE_STATUSBAR"
    bindsym o                exec --no-startup-id "spotifycli --next"; exec "$UPDATE_STATUSBAR"
    bindsym Right            exec --no-startup-id "spotifycli --next"; exec "$UPDATE_STATUSBAR"
    bindsym p                exec --no-startup-id "spotifycli --prev"; exec "$UPDATE_STATUSBAR"
    bindsym O                exec --no-startup-id "spotifycli --prev"; exec "$UPDATE_STATUSBAR"
    bindsym Left             exec --no-startup-id "spotifycli --prev"; exec "$UPDATE_STATUSBAR"
    bindsym plus             exec --no-startup-id "spotifycli --volumeup"
    bindsym minus            exec --no-startup-id "spotifycli --volumedown"
    # cancel
    bindsym $mod+Shift+0 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## take a screenshot
bindsym $mod+Print       exec --no-startup-id "xfce4-screenshooter --window --save ~/img-screenshots"
bindsym      Print       exec --no-startup-id "xfce4-screenshooter --window --save ~/img-screenshots"
bindsym $mod+Shift+Print exec --no-startup-id "xfce4-screenshooter --fullscreen --save ~/img-screenshots"
bindsym      Shift+Print exec --no-startup-id "xfce4-screenshooter --fullscreen --save ~/img-screenshots"



