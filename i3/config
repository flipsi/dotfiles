###############################################################################
###########  GENERAL  #########################################################
###############################################################################

## launcher options
set $DMENU_OPTIONS   -l 5 -fn 'PragmataPro Mono-10' -i -nb '#282828' -sb '#FABD2F' -sf '#282828'
set $DMENU_OPTIONS_2 -l 5 -fn 'PragmataPro Mono-10' -i -nb \#282828 -sb \#FABD2F -sf \#282828

## modifier key: windows/super
set $mod Mod4

## Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

## focus when mouse moves
focus_follows_mouse no

## don't move mouse cursor when changing output
mouse_warping none

## close container with middle click on title bar
## (mod2 numlock, so this should work in both cases https://github.com/i3/i3/issues/2523)
bindsym --release      button2 kill
bindsym --release Mod2+button2 kill

## enable/disable touchpad
bindsym XF86TouchpadToggle  exec --no-startup-id "$SHELLSCRIPT_PATH/xinput-toggle-enabled"

## reload the configuration file or restart i3 [preserves session] etc.
bindsym $mod+F5 mode "$refresh"
set $refresh (l) reload config, (s) restart i3, (i) initialize, (x/o) setup outputs, (d/D) setup DPI, (Z/z) save/restore layout
mode "$refresh" {
    bindsym l reload; mode "default"
    bindsym s restart
    bindsym i           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize.sh > /tmp/i3-initialize.log 2>&1"; mode "default"
    bindsym x           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize-outputs.sh"; mode "default"
    bindsym o           exec --no-startup-id "/home/sflip/.i3/bin/i3-initialize-outputs.sh --only"; mode "default"
    bindsym Shift+z     exec --no-startup-id "/home/sflip/.i3/bin/i3-workspaces-save-and-restore.py save"; mode "default"
    bindsym d           exec --no-startup-id "/home/sflip/dotfiles/setup-dpi.sh --regular"; mode "default"
    bindsym Shift+d     exec --no-startup-id "/home/sflip/dotfiles/setup-dpi.sh --high"; mode "default"
    bindsym z           exec --no-startup-id "/home/sflip/.i3/bin/i3-workspaces-save-and-restore.py restore"; mode "default"
    bindsym a           exec --no-startup-id "/home/sflip/.i3/bin/i3-config-mod-assign-chrome-app.sh > /tmp/i3-config-mod-assign-chrome-app.log 2>&1"; mode "default"
    # cancel
    bindsym $mod+F5 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## change keyboard layout
bindsym $mod+Shift+F6 mode "$change_keyboard_layout"
set $change_keyboard_layout Keyboard layout: (F1) de (F2) de_sflip (F3) us (F4) us_sflip (F5) neo (F6) dvorak (F7) programmer dvorak
mode "$change_keyboard_layout" {
    bindsym $mod+Shift+F6 exec "setxkbmap de_sflip"; mode "default"
    bindsym F1 exec "setxkbmap de"; mode "default"
    bindsym F2 exec "setxkbmap de_sflip"; mode "default"
    bindsym F3 exec "setxkbmap us"; mode "default"
    bindsym F4 exec "setxkbmap us_sflip"; mode "default"
    bindsym F5 exec "setxkbmap neo"; mode "default"
    bindsym F6 exec "setxkbmap dvorak"; mode "default"
    bindsym F7 exec "setxkbmap -layout us -variant dvp"; mode "default"
    # cancel
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## show keyboard layout
set $keyboard_layout_image_source https://www.nayuki.io/res/i-type-in-dvorak/qwerty-layout.png
set $keyboard_layout_image /home/sflip/.i3/keyboard_layout.png
exec "test -f $keyboard_layout_image || $( sleep 20 && curl $keyboard_layout_image_source > $keyboard_layout_image )"
bindsym $mod+F6 exec --no-startup-id "pkill -fx 'sxiv -z 200 $keyboard_layout_image' || sxiv -z 200 $keyboard_layout_image"



###############################################################################
###########  LOOK  ############################################################
###############################################################################

## set wallpaper
exec --no-startup-id "$SHELLSCRIPT_PATH/random-wallpaper.sh"

## change wallpaper
bindsym $mod+F7 mode "$change_wallpaper"
set $change_wallpaper Wallpaper: (i) choose interactively (r) random (m) random per output (b) restore (0-9) shades of gray
mode "$change_wallpaper" {
    bindsym i exec --no-startup-id "feh --bg-scale $(fd '.*\.(jpg|jpeg|png)$' $WALLPAPER_PATH | rofi -dmenu)"; mode "default
    bindsym r exec --no-startup-id "$SHELLSCRIPT_PATH/random-wallpaper.sh"
    bindsym m exec --no-startup-id "$SHELLSCRIPT_PATH/random-wallpaper.sh --multi"
    bindsym b exec --no-startup-id "$SHELLSCRIPT_PATH/random-wallpaper.sh --backwards"
    bindsym 0 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/black_1920x1080.png"
    bindsym 1 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_0C0C0C_1920x1080.png"
    bindsym 2 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_1E1E1E_1920x1080.png
    bindsym 3 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_2F2F2F_1920x1080.png
    bindsym 4 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_3A3A3A_1920x1080.png
    bindsym 5 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_575757_1920x1080.png
    bindsym 6 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_6E6E6E_1920x1080.png
    bindsym 7 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_919191_1920x1080.png
    bindsym 8 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/gray_DDDDDD_1920x1080.png
    bindsym 9 exec --no-startup-id "feh --bg-scale /home/sflip/.i3/wallpaper/white_1920x1080.png
    # cancel
    bindsym $mod+F7 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

