" CONFIG FILE FOR PENTADACTYL
" Author: Philipp Moers <soziflip gmail com>
" ln -s <this file> ~/.pentadactylrc



" SETTINGS

" search preferences: ignore case, search all text
set findflags='cL'
" ... show results while typing
set incfind

" follow more hints like stack overflow upvote buttons
"set hinttags+=a[class]
set hinttags+=a
set hinttags+=div[id=\"se-signup-legend\"]

" editor (e.g. to edit source with gF or edit textfield with <C-i>)
set editor='subl --wait'

" default search engine
set defsearch=duckduckgo
"set defsearch=google

" duckduckgo advanced search
" \ to go to first result immediately
map \\ :tabopen \ 
" ! to use other search engine (like 'ebay' or 'osm') 
map ! :tabopen !

" completions
set complete=search,location,file,suggestion

" autocomplete when opening sites only with tab
set autocomplete=!/ex/(open|tabopen),.?

" QuickMarks
qmark b https://finanzportal.fiducia.de/g14pepe/entry?rzid=XC&rzbk=0151
qmark u https://uniworx.ifi.lmu.de/
qmark f https://de-de.facebook.com/
qmark g https://github.com/sflip
qmark t https://twitter.com/
qmark y https://accounts.google.com/ServiceLogin?uilel=3&service=youtube&passive=true&continue=http%3A%2F%2Fwww.youtube.com%2Fsignin%3Faction_handle_signin%3Dtrue%26nomobiletemp%3D1%26hl%3Dde_DE%26next%3D%252F&hl=de_DE&ltmpl=sso
qmark z http://www.zdf.de/ZDFmediathek/hauptnavigation/startseite/#/hauptnavigation/sendung-verpasst
qmark c http://www.cubetimer.com/
qmark p file:///home/sflip/masterstudies/modules/informationsvisualisierung/project/pubdb/index.html
qmark v http://localhost/projects/govp2/

" Styles
"highlight StatusLineNormal background-color: #DDD
"highlight Download[active] background-color: #FFEFB9
colorscheme solarized-light



" KEYBINDINGS

" reload this config file
map <F5> :source ~/.pentadactylrc<CR>

" switch tabs"
map <A-n> :tabnext<CR>
map <A-p> :tabprevious<CR>
imap <A-n> <Esc>:tabnext<CR>
imap <A-p> <Esc>:tabprevious<CR>

" LRU tab
"map # :buffer! #<CR>
nmap <A-Space> :buffer! #<CR>
imap <A-Space> <Esc>:buffer! #<CR>

" find tab
"nmap <A-w> :buffer! 
nmap # :buffer! 

" move tab
map <A-S-p> :tabmove -1<CR>
map <A-S-n> :tabmove +1<CR>

" close tab
map q :tabclose<CR>


" misc views ("w"indows)
nmap wa :tabopen about:addons<CR>
nmap wd :downloads<CR>
nmap wh :tab helpall<CR>
nmap wi :history<CR>
nmap wj :jumps<CR>
nmap wp :tabopen about:preferences<CR>
nmap ww :dialog passwords<CR>

" zoom everything
map + ZI
map \- ZO

" jump to mark
map ä '

" move in history
map <A-u> :back<CR>
map <A-S-u> :forward<CR>


" movements
imap <A-l> <Right>
imap <A-h> <Left>
cmap <A-l> <Right>
cmap <A-h> <Left>

" emacs movements
imap <A-f> <C-Right>
imap <A-b> <C-Left>
cmap <A-f> <C-Right>
cmap <A-b> <C-Left>

" delete/kill word
imap <A-BS> <C-W>
imap <A-d> <C-Del>
cmap <A-BS> <C-W>
cmap <A-d> <C-Del>


" copy/paste like in gnome-terminal
imap <C-S-v> <C-v><C-v>
imap <C-S-c> <C-v><C-c>
cmap <C-S-v> <C-v><C-v>
cmap <C-S-c> <C-v><C-c>

" search
map ö /


" Developer Tools (console)
map <C-A-i> <C-S-k>
map <C-A-o> <C-S-i> 


" NoScript
map <A-s>p :set noscript-sites!=<A-Tab>
map <A-s>t :set noscript-tempsites!=<A-Tab>

